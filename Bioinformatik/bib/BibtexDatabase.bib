	journal = {Journal of Bacteriology},
	author = {Dennis L Maeder and Iain Anderson and Thomas S Brettin and David C Bruce and Paul Gilna and Cliff S Han and Alla Lapidus and William W Metcalf and Elizabeth Saunders and Roxanne Tapia and Kevin R Sowers},
