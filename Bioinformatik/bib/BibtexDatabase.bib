	keywords = {Amino Acid Sequence, Bacteria, Base Sequence, Evolution, Molecular, Molecular Sequence Data, Phylogeny, Protein Structure, Secondary, Recombinant Fusion Proteins, {RNA} Nucleotidyltransferases, Sequence Deletion},
	pages = {7953--7958}
},

@article{cho_reengineering_2007,
