	keywords = {Ferredoxins, Formate Dehydrogenases, Gene Rearrangement, Genome, Archaeal, Methanosarcina barkeri, Multigene Family, Open Reading Frames, Oxidoreductases, Plasmids, Proteins, Replication Origin, Sequence Homology, Nucleic Acid},
	pages = {7922--7931}
},

@article{xiong_mechanism_2004,
