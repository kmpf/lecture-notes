@article{li_crystal_2002,
	title = {Crystal structures of the Bacillus stearothermophilus {CCA-adding} enzyme and its complexes with {ATP} or {CTP}},
	volume = {111},
	issn = {0092-8674},
	url = {http://www.ncbi.nlm.nih.gov/pubmed/12526808},
